<UserControl x:Class="VideoCatalog.Panels.PreviewFrameWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
		<MediaElement x:Name="mediaPlayer" RenderOptions.BitmapScalingMode="HighQuality" Visibility="Visible"
						IsMuted="True" LoadedBehavior="Manual" UnloadedBehavior="Manual" ScrubbingEnabled="False"
						Margin="0,0,0,0" Stretch="UniformToFill" StretchDirection="Both" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<ProgressBar x:Name="prevProgress" Maximum="10" Value="5" Visibility="Hidden"
						Height="3.5" HorizontalAlignment="Stretch" VerticalAlignment="Top" BorderThickness="0" BorderBrush="#00000000"
						Margin="0,0,0,0" Padding="0,0,0,0" Background="#CC000000" Foreground="#FF00B4FF">
		</ProgressBar>
	</Grid>
</UserControl>
