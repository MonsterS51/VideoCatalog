<UserControl x:Class="VideoCatalog.Panels.SettingsPanel"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:VideoCatalog.Windows"
			 mc:Ignorable="d" 
			 d:DesignHeight="450" d:DesignWidth="800">
	<Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Margin="0,0,0,0">
		<DockPanel>
			<Label Content="Settings" DockPanel.Dock="Top"/>
			<StackPanel DockPanel.Dock="Top">
				<GroupBox>
					<GroupBox.Header>
						<Label FontSize="9" Padding="0">Preview Mode</Label>
					</GroupBox.Header>
					<StackPanel Orientation="Horizontal">
						<Label Content="Mode: "/>
						<ComboBox Name="CB_previewMode" Width="100" SelectedValuePath="Content">
							<ComboBoxItem Content="WPF" IsSelected="True" />
							<ComboBoxItem Content="FFME"/>
						</ComboBox>
					</StackPanel>
				</GroupBox>
			</StackPanel>

			<UniformGrid Rows="1" Columns="2">
				<Button Content="Применить" Height="25" DockPanel.Dock="Bottom" Grid.Column="0" Grid.Row="0" Click="Accept_Click"/>
				<Button Content="Отмена" Height="25" DockPanel.Dock="Bottom" Grid.Column="1" Grid.Row="0"/>
			</UniformGrid>
			

		</DockPanel>
	</Grid>
</UserControl>
