<UserControl x:Class="VideoCatalog.Panels.TagPlate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:util="clr-namespace:VideoCatalog.Util"
			 mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
	<Border Name="TagBrd" Background="#FF006C08" BorderBrush="Black" Margin="1" BorderThickness="1" CornerRadius="5"
			SnapsToDevicePixels="True" UseLayoutRounding="True">
		<Grid >
			<util:OutlinedTextBlock x:Name="TagLabel" Margin="2,1" Text="test" FontSize="11" FontWeight="Bold"
								TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" StrokeThickness="1.5" Stroke="Black" Fill="Black"></util:OutlinedTextBlock>
		</Grid>

	</Border>
</UserControl>
